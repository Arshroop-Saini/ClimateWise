<%- include("partials/gg"); -%>

<nav>
    <input type="checkbox" id="check">
    <label for="check" class="checkbtn">
      <i class="fas fa-bars"></i>
    </label>
    <label class="logo animate-charcter-head">ClimateAPP</label>
    <ul>
      <li><a href="/">Home</a></li>

  </nav>
  <br><br>
<br>
<div class="container">

    <center><h1 class="animate-charcter" style="
        font-weight: 700; font-size:
        55px; text-align: center;
        line-height: 1.2;">Carbon Calculator</h1>
<br><br><br>
  <center>
    <p>
      <!-- First Form -->
      <form action="/footprint/clean" method="GET" class="form-inline">
        <div class="form-group">
          <label for="energy-select">The source of the clean energy. Can be Solar, Wind, HydroElectric, Biomass, Geothermal, Tidal or OtherCleanEnergy: </label>
          <select style="width: 400px; height: 35px" name="energy" id="energy-select" class="">
            <option selected hidden disabled >Select a Energy
            </option>
            <option value="Solar">Solar</option>
            <option value="Wind">Wind</option>
            <option value="HydroElectric">HydroElectric</option>
            <option value="Biomass">Biomass</option>
            <option value="Geothermal">Geothermal</option>
            <option value="Tidal ">Tidal </option>
            <option value="OtherCleanEnergy">OtherCleanEnergy</option>
          </select>
          <!-- <input type="text" style="width: 400px; height: 35px" name="energy" id="energy-select" class=""> -->
          <br>
          <label for="consumption-select">The amount of energy consumed in KWH: </label>
          <input type="text" style="width: 400px; height: 35px" name="consumption" id="consumption-select" class="">
          <br>
        
          <input type="submit" inputmode="search" spellcheck="true"  autocomplete="on" value="Calculate" class="btn btn-primary">
        </div>        
      </form>
    </p>
  </center>
  <div class="jumbotron">
    <% if(carbonEquivalent) { %>
    <p><%=carbonEquivalent%></p>
    <% } else { %>
      <p></p>
      <% } %>
    <br>
  </div>
 
  
  </div>

</div>
</div>
<%- include("partials/footer"); -%>